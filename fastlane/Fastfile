
desc "린트 테스트"
lane :lint_test do |options|
  gradle(
    task: "check",
    flavor: options[:build_flavor],
    build_type: options[:build_type]
  )
end

desc "유닛 테스트"
lane :unit_test do |options|
  gradle(
    task: "test",
    flavor: options[:build_flavor],
    build_type: options[:build_type]
  )
end


